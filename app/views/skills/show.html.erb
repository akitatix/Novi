<div class="main-div">

  <div class="skill-resume-title">
    <h2>Résumé de vos informations</h2>
  </div>


  <div class="skill-resume">
    <div class="skill-resume-picture" style="background-image: url(<%= cl_image_path @skill.photo.key %>)"></div>
      <div class="skill-resume-infos">
        <h2> <%= @skill.name %></h2>
        <p><%= @skill.description %></p>
        <p><%= @skill.price %> euros</p>

          <% @reviews.each do |x| %>
          <% if x.skill == @skill %>
          <p>Stars: <%= x.rating %></p>
          <p>Commentaire: <%= x.content %></p>
          <%= (link_to "Delete Review", skill_review_path(@skill,x), method: :delete) if x.skill.users.include? current_user %>
          <%= (link_to "Edit Review", edit_skill_review_path(@skill,x)) if x.skill.users.include? current_user %>
        <% end  %>
      <% end %>
    </div>
  </div>
</div>


<%= link_to "back", skills_path %>
<%= (link_to "New Review", new_skill_review_path(@skill))if @skill.users.include? current_user %>

<%= link_to "Buy", achat_path(@skill) %>


